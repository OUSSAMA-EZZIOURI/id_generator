{% extends 'base.html.twig' %}

{% block content %}
    <div class="content">
        <div class="animated fadeIn">


            <div class="row">

                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-header">Générateur de séquences</div>
                        <div class="card-body card-block">

                            <form action="reserve_sequence" method="post" class="">
                                <div class="form-group">
                                    <div class="input-group">

                                        <button type="button"  href="{{ path('generate_sequence') }}" id="generate_sequence_btn" class="btn btn-success btn-sm fa fa-cog"> Génerer </button>
                                        <input type="text" id="sequence" name="sequence" placeholder="Sequence"
                                               class="form-control" readonly value="">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="input-group">
                                        <div class="input-group-addon">Demandeur <i class="fa fa-user"></i></div>
                                        <input type="text" id="_username" name="_username"
                                               class="form-control" readonly value="{{ app.user.username }}">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="input-group">
                                        <div class="input-group-addon">Agence <i class="fa fa-building"></i></div>
                                        <input type="text" id="agency" name="agency"
                                               class="form-control" readonly value="{{ app.user.agency }}">
                                    </div>
                                </div>
{#
                                <div class="form-actions form-group">
                                    <button type="submit" onclick="return " class="btn btn-success btn-sm">Reserver</button>
                                </div>#}
                            </form>
                        </div>
                    </div>
                </div>

            </div>


        </div><!-- .animated -->
    </div><!-- .content -->


{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}
