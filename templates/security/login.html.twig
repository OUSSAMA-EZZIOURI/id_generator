{% extends 'security/authbase.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}
{% block body %}

    <div class="sufee-login d-flex align-content-center flex-wrap">
        <div class="container">
            <div class="login-content">

                <div class="login-form">
                    <div class="box-title">
                        <h2>Auto ID Generator</h2>
                        <p>&nbsp;</p>
                    </div>
                    <form id="Login" method="post">

                        <div class="form-group">
                            <label>Email address</label>
                            <input type="email" name="_username" class="form-control" id="inputEmail"
                                   placeholder="Email Address" value="{{ last_username }}" required>
                        </div>
                        <div class="form-group">
                            <label>Password</label>
                            <input type="password" name="_password" class="form-control" id="inputPassword"
                                   placeholder="Password" required>
                        </div>
                        <div class="checkbox">
                            <label>
                                <input type="checkbox" name="_remember-me"> {% trans %}Remember Me{% endtrans %}
                            </label>
                        </div>
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                        <input type="hidden" name="_target_path" value="{{ app.request.headers.get('referer') }}"/>
                        {% if error %}
                            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}
                        <button type="submit"
                                class="btn btn-success btn-flat m-b-30 m-t-30">{% trans %}Login{% endtrans %}</button>


                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}
