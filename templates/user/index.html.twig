{% extends 'base.html.twig' %}

{% block content %}
    <div class="breadcrumbs">
        <div class="breadcrumbs-inner">
            <div class="row m-0">
                <div class="col-sm-4">
                    <div class="page-header float-left">
                        <div class="page-title">
                            <ol class="breadcrumb text-left">
                                <li class="active">{{ title }}</li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="content pb-0">


        <div class="clearfix"></div>
        <div class="orders">
            <div class="row">
                <div class="col-xl-12">
                    <div class="card">
                        <div class="card-body--">
                            <div class="table-stats order-table ov-h">
                                <table class="table ">
                                    <thead>
                                    <tr>
                                        <th class="serial">#</th>
                                        <th>Agence</th>
                                        <th>Nom / Pr√©nom</th>
                                        <th>Email</th>
                                        <th>Actions</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for u in users %}
                                        <tr>
                                            <td class="serial">{{ u.id }}</td>
                                            <td>{{ u.agency }}</td>
                                            <td><span class="name">{{ u.username }}</span></td>
                                            <td><span class="product">{{ u.email }}</span></td>
                                            <td>
                                                <span class="product">
                                                    <div class="btn-group" role="group" aria-label="Actions">
                                                        <a href="{{ path('edit_user', {'id':u.id}) }}" type="button" class="btn btn-sm btn-light"><i class="fa fa-edit"></i></a>
                                                        <a href="#" type="button" class="btn btn-sm btn-danger"><i class="fa fa-trash"></i></a>
                                                    </div>
                                                </span>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div> <!-- /.table-stats -->
                        </div>
                    </div> <!-- /.card -->
                </div>  <!-- /.col-lg-8 -->


            </div> <!-- /.order -->


        </div> <!-- .content -->

    </div> <!-- .content -->
{% endblock %}

    {% block javascripts %}
        {{ parent() }}
    {% endblock %}
