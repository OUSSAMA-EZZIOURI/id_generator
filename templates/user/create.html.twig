{% extends 'base.html.twig' %}

{% block content %}
    <!-- breadcrumbs -->
    <div class="breadcrumbs">
        <div class="breadcrumbs-inner">
            <div class="row m-0">
                <div class="col-sm-12">
                    <div class="page-header float-left">
                        <div class="page-title">
                            <ol class="breadcrumb text-left">
                                <li><a href="{{ path('all_users') }}">Utilisateurs</a></li>
                                <li class="active">{{ title }}</li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- end breadcrumbs -->

    <div class="content pb-0">

        <div class="clearfix"></div>
        <div class="orders">
            <div class="row">
                <div class="col-xl-12">
                    <div class="card">
                        <div class="card-body card-block">
                            {{ form_start(formUser) }}
                            {#{{ form_widget(formUser) }}#}
                            {{ form_row(formUser.agency, {'attr': {'required':true, 'class':'form-control col-lg-6'}}) }}
                            {{ form_row(formUser.username, {'attr': {'placeholder':"Username",'required':true, 'class':'form-control col-lg-6'}}) }}
                            {{ form_row(formUser.email, {'attr': {'placeholder':"Email",'required':true, 'class':'form-control col-lg-6'}}) }}
                            {{ form_row(formUser.password, {'attr': {'placeholder':"Password",'required':true, 'class':'form-control col-lg-6'}}) }}
                            {% if editMode %}
                            {{ form_row(formUser.save, {'label': 'Sauvegarder', 'attr': {'class' : 'btn btn-success btn-sm mt-3'}}) }}
                            {% else %}
                            {{ form_row(formUser.save, {'label': 'Créer', 'attr': {'class' : 'btn btn-success btn-sm mt-3'}}) }}
                            {% endif %}
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                            {{ form_end(formUser) }}
                            {#
                            A static form
                            <form action="{{ path('add_user') }}" method="post" class="">
                                <div class="form-group col-lg-6">
                                    <label for="exampleFormControlSelect1">Agence</label>
                                    <select class="form-control" id="agency" name="agency">
                                        <option>Agence 1</option>
                                        <option>Agence 2</option>
                                        <option>Agence 3</option>
                                        <option>Agence 4</option>
                                        <option>Agence 5</option>
                                    </select>
                                </div>
                                <div class="form-group col-md-6">
                                    <div class="input-group">
                                        <div class="input-group-addon"><i class="fa fa-user"></i></div>
                                        <input id="username" name="username" placeholder="Username" class="form-control"
                                               type="text">
                                    </div>
                                </div>
                                <div class="form-group col-md-6">
                                    <div class="input-group">
                                        <div class="input-group-addon"><i class="fa fa-envelope"></i></div>
                                        <input id="email" name="email" placeholder="Email" class="form-control"
                                               type="email">
                                    </div>
                                </div>
                                <div class="form-group col-md-6">
                                    <div class="input-group">
                                        <div class="input-group-addon"><i class="fa fa-asterisk"></i></div>
                                        <input id="password" name="password" placeholder="Password" class="form-control"
                                               type="password">
                                    </div>
                                </div>
                                <div class="form-group col-md-6">
                                    <div class="input-group">
                                        <div class="input-group-addon"><i class="fa fa-asterisk"></i></div>
                                        <input id="confirm_password" name="confirm_password" placeholder="Confirm password" class="form-control"
                                               type="password">
                                    </div>
                                </div>


                                <div class="form-actions form-group col-md-6">
                                    <button type="submit" class="btn btn-success btn-sm">Créer</button>
                                </div>
                            </form>#}
                        </div>
                    </div>
                </div>

            </div>


        </div><!-- .animated -->
    </div> <!-- .content -->
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}
