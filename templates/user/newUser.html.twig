{% extends 'base.html.twig' %}

{% block content %}
    <div class="content pb-0">
        <div class="animated fadeIn">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-header">Example Form</div>
                        <div class="card-body card-block">
                            <form action="#" method="post" class="">
                                <div class="form-group col-md-6">
                                    <div class="input-group">
                                        <div class="input-group-addon"><i class="fa fa-user"></i></div>
                                        <input id="username" name="username" placeholder="Username" class="form-control"
                                               type="text">
                                    </div>
                                </div>
                                <div class="form-group col-md-6">
                                    <div class="input-group">
                                        <div class="input-group-addon"><i class="fa fa-envelope"></i></div>
                                        <input id="email" name="email" placeholder="Email" class="form-control"
                                               type="email">
                                    </div>
                                </div>
                                <div class="form-group col-md-6">
                                    <div class="input-group">
                                        <div class="input-group-addon"><i class="fa fa-asterisk"></i></div>
                                        <input id="password" name="password" placeholder="Password" class="form-control"
                                               type="password">
                                    </div>
                                </div>
                                <div class="form-group col-md-6">
                                    <div class="input-group">
                                        <div class="input-group-addon"><i class="fa fa-asterisk"></i></div>
                                        <input id="confirm_password" name="confirm_password" placeholder="Confirm password" class="form-control"
                                               type="password">
                                    </div>
                                </div>
                                <div class="form-group col-md-6">
                                    <div class="input-group">
                                        <div class="input-group-addon"><i class="fa fa-asterisk"></i></div>

                                    </div>
                                </div>
                                <div class="form-actions form-group">
                                    <button type="submit" class="btn btn-success btn-sm">Submit</button>
                                </div>
                            </form>
                        </div>
                    </div>

                    <div class="card">
                        <div class="card-header">Nouveau utilisateur</div>
                        <div class="card-body card-block">

                            <form action="add_user" method="post" class="">
                                <div class="form-group col-lg-6">
                                    <div class="input-group">
                                        <input type="text" id="sequence" name="sequence" placeholder="Sequence"
                                               class="form-control" readonly value="">
                                    </div>
                                </div>
                                <div class="form-group col-lg-6">
                                    <label for="_username" class="control-label mb-1">Demandeur</label>
                                    <input id="_username" name="_username" class="form-control"
                                           value="{{ app.user.username }}" type="text" readonly>
                                </div>
                                <div class="form-group col-lg-6">
                                    <label for="_username" class="control-label mb-1">Agence</label>
                                    <input type="text" id="agency" name="agency"
                                           class="form-control" readonly value="{{ app.user.agency }}">
                                </div>
                                <div class="form-actions form-group">
                                    <button type="submit" class="btn btn-success btn-sm">Cr√©er</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>

            </div>


        </div><!-- .animated -->
    </div> <!-- .content -->
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}
